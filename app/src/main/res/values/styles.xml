<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>

    <style name="delivery_dialog" parent="Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="android:dividerHeight">2dp</item>
    </style>

    <style name="divider_line">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/ola_green</item>
    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ola_button">
        <item name="android:textSize">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@drawable/btn_txt_selector</item>
        <item name="android:background">@drawable/btn_back_selector</item>
    </style>

    <style name="category_panel_individual">
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">6dp</item>
    </style>

    <style name="MaterialProgressBarCircular" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="mlpb_progress_stoke_width">2dp</item>
        <item name="mlpb_progress_color">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="circleImageViewNormal">
        <item name="android:layout_height">@dimen/circle_imageView_dimens_normal</item>
        <item name="android:layout_width">@dimen/circle_imageView_dimens_normal</item>
        <item name="border_width">1dp</item>
        <item name="border_color">@color/circle_image_view_border_color</item>
    </style>

    <style name="MaterialDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorPrimary</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <!-- Used for the background -->
        <item name="android:background">@color/primary_text_default_material_light</item>
    </style>

</resources>
