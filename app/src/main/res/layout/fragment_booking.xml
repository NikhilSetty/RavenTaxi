<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    tools:context=".BookingActivityFragment">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="45dp"
        android:id="@+id/logo"
        android:src="@drawable/ola_logo_horizontal"
        android:layout_centerHorizontal="true"
         />

    <View android:layout_width="match_parent"
        style="@style/divider_line"
        android:layout_alignTop="@+id/category_panel" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/category_panel"
        android:layout_below="@+id/logo"
        android:layout_height="wrap_content" android:paddingTop="4dp"
        android:paddingBottom="4dp" android:layout_marginTop="19dp">
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" android:layout_centerHorizontal="true"
         >

        <RelativeLayout
            android:layout_width="wrap_content"
            style="@style/category_panel_individual"
            android:background="@color/black"
            android:tag="1"
            android:layout_height="wrap_content" android:id="@+id/mini_rr" android:paddingBottom="4dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mini"
            android:src="@drawable/mini_selected"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Mini"
            android:id="@+id/mini_tv"
            android:textColor="@color/ola_green"
            android:layout_below="@+id/mini" android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content" android:id="@+id/sedan_rr"
            android:layout_height="wrap_content" style="@style/category_panel_individual"
            android:paddingBottom="4dp" android:background="@color/ola_green"
            android:layout_toRightOf="@+id/mini_rr"
            android:tag="2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sedan"
            android:layout_centerHorizontal="true"
            android:src="@drawable/sedan_unselected"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Sedan"
            android:textColor="@color/white"
            android:id="@+id/textView2"
            android:layout_below="@+id/sedan"
            android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content" android:background="@color/ola_green"
            android:paddingBottom="4dp" android:id="@+id/prime_rr"
            style="@style/category_panel_individual"
            android:tag="3"
            android:layout_height="wrap_content" android:layout_toRightOf="@+id/sedan_rr">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/prime"
            android:src="@drawable/prime_unselected"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Prime"
            android:textColor="@color/white"
            android:id="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/prime" />
        </RelativeLayout>
    </RelativeLayout>
    </RelativeLayout>
    <View android:layout_width="match_parent"
        style="@style/divider_line"
        android:id="@+id/relativeLayout"
        android:layout_below="@+id/category_panel"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_time"
        android:layout_marginTop="30dp"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        style="@style/ola_button"
        android:id="@+id/select_time_btn"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ride_now"
        android:id="@+id/ride_now_btn"
        style="@style/ola_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />



</RelativeLayout>
